# -- Verify commands exist.

for cmd in jq curl nm-online; do
    command -v "$cmd" >/dev/null 2>&1 || exit 1
done


# -- Dispatcher variables.
  # shellcheck disable=SC2034
IFACE="$1"
STATUS="$2"

[ "$STATUS" != "up" ] && exit 0


# -- Wait until full connectivity is established, including DNS.

nm-online -q -t 15 >/dev/null 2>&1 || exit 1


# -- Use IP geolocation to detect timezone.
#    -- ⚠️ A Note on Privacy: This method sends your IP address to a third-party service (worldtimeapi.org). This is a common practice and generally low-risk, but it's important to be aware of.

TZ_API="https://worldtimeapi.org/api/ip"
ZONE=$(curl -fsSL "$TZ_API" | jq -r .timezone)


# -- If successful, set it. Fallback using a cached timezone (from /etc/timezone).

if [ -n "$ZONE" ] && [ "$ZONE" != "null" ] && [ -e "/usr/share/zoneinfo/$ZONE" ]; then
    ln -sf "/usr/share/zoneinfo/$ZONE" /etc/localtime
    echo "$ZONE" > /etc/timezone
    echo "Timezone set to $ZONE"
else
    if [ -f /etc/timezone ] && [ -e "/usr/share/zoneinfo/$(cat /etc/timezone)" ]; then
        CACHED_ZONE="$(cat /etc/timezone)"
        ln -sf "/usr/share/zoneinfo/$CACHED_ZONE" /etc/localtime
        echo "Timezone fallback to $CACHED_ZONE"
    else
        echo "Failed to determine timezone automatically and no fallback available."
    fi
fi


# -- Restart NTP service to re-sync with the correct offset.

rc-service ntpsec-openrc restart
