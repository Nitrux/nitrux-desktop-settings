set -x


# -- Function to create directories if they don't exist

create_directories() {
    if [ ! -d "$HOME/Applications" ]; then
        echo "Creating directory: $HOME/Applications"
        mkdir "$HOME/Applications"
    else
        echo "Directory already exists: $HOME/Applications"
    fi
}


# -- Function to download Appimage files.

user_agent="BrightSign/8.2.55.5 (XT1144) Mozilla/5.0 (X11; Linux aarch64) AppleWebKit/537.36 (KHTML, like Gecko) QtWebEngine/5.12.3 Chrome/69.0.3497.128 Safari/537.36"

download_appimage() {
    local name="$1"
    local url="$2"
    local destination="$HOME/Applications/$name"

    axel -a -q -k -U "$user_agent" -n 8 "$url" -o "$destination"
    chmod +x "$destination"
}


# -- Install LibreOffice (AppImage).

notify-send "Installing LibreOffice (AppImage) in the background, please wait..." --icon=libreoffice-startcenter

create_directories

download_appimage "LibreOffice-fresh.standard-x86_64.AppImage" "https://appimages.libreitalia.org/LibreOffice-fresh.standard-x86_64.AppImage"

notify-send "Installation complete." --icon=libreoffice-startcenter


# -- Check if LibreOffice is installed an delete install script.

if [ -f "$HOME/Applications/LibreOffice-fresh.standard-x86_64.AppImage" ]; then
    rm "$HOME/.local/bin/install-libreoffice-appimage"
    rm "$HOME/.local/share/applications/install.libreoffice.desktop"
fi

exit
