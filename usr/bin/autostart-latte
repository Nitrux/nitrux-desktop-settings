#! /bin/zsh

set -x

# -- Start Latte Dock
# -- Need to start plasmashell now too because of course you have to

killall plasmashell
sleep 2 && plasmashell &

latte-dock -d -r

touch $HOME/.latte-dock.log

if [[ `pgrep -a latte-dock | rev | cut -d' ' -f1 | rev` != "latte-dock" ]];
    then
        sleep 2 && latte-dock -d -r 2>&1 | tee $HOME/.latte-dock.log &
    else
        killall latte-dock
        sleep 2 && latte-dock -d -r 2>&1 | tee $HOME/.latte-dock.log &
fi
