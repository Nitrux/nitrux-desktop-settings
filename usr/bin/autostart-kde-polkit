# -- Exit on errors.

set -eu


# -- Functions.

wait_for_waybar() {
    for _ in $(seq 1 40); do
        if pgrep -xu "$USER" waybar >/dev/null; then
            return 0
        fi
            sleep 0.25
        done
    return 1
}


# -- Start KDE's PolicyKit agent to save wireless networks using a GUI.
#   -- kded6 and kwalletd6 are required.

QDBUS="$(command -v qdbus6 || command -v qdbus || true)"
POLKIT_AGENT="/usr/lib/x86_64-linux-gnu/libexec/polkit-kde-authentication-agent-1"

[ -x "$POLKIT_AGENT" ] || POLKIT_AGENT="/usr/lib/polkit-kde-authentication-agent-1"

if [ -z "${DBUS_SESSION_BUS_ADDRESS:-}" ] && command -v dbus-launch >/dev/null; then
    eval "$(dbus-launch --sh-syntax)"
fi


# -- 1. Start the Polkit Agent (Password prompts).

pgrep -fu "$USER" polkit-kde-authentication-agent-1 >/dev/null || "$POLKIT_AGENT" &


# -- 2. Start the Wallet Daemon (Password storage).

pgrep -xu "$USER" kwalletd6 >/dev/null || kwalletd6 >/dev/null 2>&1 &


# -- 3. Start kded6 for network logic, but ensure the tray watcher is DISABLED.
#   -- We explicitly set autoload=false to prevent it from stealing the tray from Waybar.

pgrep -xu "$USER" kded6 >/dev/null && killall kded6 || true

if wait_for_waybar && ! pgrep -xu "$USER" kded6 >/dev/null; then
    kwriteconfig6 --file kded6rc --group Module-statusnotifierwatcher --key autoload false
    kded6 --replace >/dev/null 2>&1 &
fi

# 4. Load the Network Management module.

if [ -n "$QDBUS" ] && pgrep -xu "$USER" kded6 >/dev/null; then
    for _ in $(seq 1 40); do
        "$QDBUS" 2>/dev/null | grep -q org.kde.kded6 && break
        sleep 0.25
    done
    "$QDBUS" org.kde.kded6 /kded org.kde.kded6.loadModule networkmanagement || true
fi
