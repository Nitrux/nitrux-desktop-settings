# -- Exit on errors.

set -eu


# -- Start KDE's PolicyKit agent to save wireless networks using a GUI.
#   -- kded6 and kwalletd6 are required.

QDBUS="$(command -v qdbus6 || command -v qdbus)"
POLKIT_AGENT="/usr/lib/x86_64-linux-gnu/libexec/polkit-kde-authentication-agent-1"
[ -x "$POLKIT_AGENT" ] || POLKIT_AGENT="/usr/lib/polkit-kde-authentication-agent-1"

pgrep -xu "$USER" kwalletd6 >/dev/null 2>&1 || nohup kwalletd6 >/dev/null 2>&1 &
pgrep -xu "$USER" kded6 >/dev/null 2>&1 || nohup kded6 --replace >/dev/null 2>&1 &
pgrep -fa polkit-kde-authentication-agent-1 >/dev/null 2>&1 || nohup "$POLKIT_AGENT" >/dev/null 2>&1 &

i=0
while [ $i -lt 40 ]; do
  if "$QDBUS" | grep -q org.kde.kded6; then
    "$QDBUS" org.kde.kded6 /kded org.kde.kded6.loadModule networkmanagement || true
    "$QDBUS" org.kde.kded6 /kded org.kde.kded6.loadedModules >/dev/null 2>&1
    break
  fi
  i=$((i+1))
  sleep 0.25
done
