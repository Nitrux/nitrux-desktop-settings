#! /bin/bash

set -x


#   (force) Add plasma config to use latte in wayland

xdg_skel_path="/etc/skel/.config"
xdg_user_path="$HOME/.config"

[ -f "$xdg_user_path/plasma-org.kde.plasma.desktop-appletsrc" ] &&
    rm "$xdg_user_path/plasma-org.kde.plasma.desktop-appletsrc"
    $(which cp) "$xdg_skel_path/{plasma-org.kde.plasma.desktop-appletsrc,plasmashellrc}"


sleep 1


#   restart plasma

if pgrep -x "plasmashell" > /dev/null
    then
        plasmashell --replace &
fi

sleep 1

exit 0
