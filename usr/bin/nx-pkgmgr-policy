# -- Exit on errors.

set -eu


# -- Environment variables.

export QT_QUICK_CONTROLS_STYLE=org.kde.breeze


# -- Identify the command being blocked (apt, apt-get, dpkg, etc.).

CMD=$(basename "$0")

# -- Identify the actual user (even if sudo was used).

REAL_USER="${SUDO_USER:-$USER}"


# -- Use a log.

LOGDIR=/var/log/nitrux
LOGFILE="$LOGDIR/hcel-software.log"

if [ -w "/var/log" ]; then
    mkdir -p "$LOGDIR" 2>/dev/null || true
    printf '%s BLOCKED: %s USER: %s\n' "$(date -Iseconds)" "$CMD" "$REAL_USER" >>"$LOGFILE" 2>/dev/null || true
fi


# -- Notify users that there is no system package manager and make them understand this is intentional.

TITLE="Command Blocked: $CMD"

MSG="<b>Usage of <tt>$CMD</tt> is not supported on the host system.</b><br><br>"
MSG+="Nitrux is a distribution that doesnâ€™t revolve around a package manager like other distributions.<br><br>"
MSG+="In Nitrux, the preferred way to install new software is the following:<br><br>"
MSG+="&nbsp;&bull;&nbsp;<b>AppBoxes</b> (For GUI applications, CLI tools, utils and some WMs)<br>"
MSG+="&nbsp;&bull;&nbsp;<b>Flatpak</b> (For additional GUI applications)<br>"
MSG+="&nbsp;&bull;&nbsp;<b>Distrobox</b> (For tasks requiring a package manager, i.e., compiling or workflow transition)<br><br>"
MSG+="Please review the documentation:<br><br>"
MSG+="<b>Software Management: https://nxos.org/tutorial/software-management/</b><br>"
MSG+="<b>How to use Distrobox: https://nxos.org/tutorial/how-to-use-distrobox-in-nitrux/</b><br>"
MSG+="<hr><b>The command was not executed.</b>"

if [ -n "${DISPLAY-}" ] && command -v kdialog >/dev/null 2>&1; then
    kdialog --title "$TITLE" --msgbox "$MSG" --geometry 600x400
else
    printf '\n'
    printf '!! COMMAND BLOCKED: %s !!\n' "$CMD"
    printf 'Nitrux does not support using package managers on the host system.\n'
    printf 'Please use AppImages or run this command inside a Distrobox container.\n\n'
    printf 'Documentation:\n'
    printf ' - https://nxos.org/tutorial/software-management/\n'
    printf ' - https://nxos.org/tutorial/how-to-use-distrobox-in-nitrux/\n\n'
fi

exit 1
